<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvalonMonitor.Views.UnreachableView">

  <Expander Header="Unreachable Members" IsExpanded="True" ExpandDirection="Left">
    <Expander.Content>
      <DataGrid Items="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True" MinHeight="200">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Roles" Binding="{Binding Roles}" />
          <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
          <DataGridTextColumn Header="Service Address" Binding="{Binding Address}" />
          <DataGridTextColumn Header="DateStamp" Binding="{Binding TimeStamp}" />
        </DataGrid.Columns>
      </DataGrid>
    </Expander.Content>
  </Expander>

</UserControl>
